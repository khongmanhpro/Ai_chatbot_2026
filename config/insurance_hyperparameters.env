# Hyperparameter Configuration for Insurance Domain
# Optimized based on insurance document characteristics

###########################
# Retrieval Parameters
###########################
# Tăng TOP_K vì tài liệu bảo hiểm có nhiều cross-references
TOP_K=15

# Tăng CHUNK_TOP_K để capture đầy đủ context
CHUNK_TOP_K=12

# Entity và Relation tokens - tăng để xử lý điều khoản phức tạp
MAX_ENTITY_TOKENS=5000
MAX_RELATION_TOKENS=5000
MAX_TOTAL_TOKENS=12000

###########################
# Chunking Parameters
###########################
# Giảm CHUNK_SIZE xuống 1000 cho legal text (atomic chunks)
CHUNK_SIZE=1000

# Tăng overlap để đảm bảo không bỏ sót context ở biên
CHUNK_OVERLAP_SIZE=150

# Số chunks liên quan mỗi entity - quan trọng cho việc truy vết
RELATED_CHUNK_NUMBER=6

###########################
# Summary Parameters
###########################
# Tăng threshold để LLM tự động summarize khi merge entities
FORCE_LLM_SUMMARY_ON_MERGE=8

# Tăng max tokens cho summary vì điều khoản dài
SUMMARY_MAX_TOKENS=1800

# Context size cho summary
SUMMARY_CONTEXT_SIZE=14000

###########################
# Retrieval Thresholds
###########################
# Giảm cosine threshold để recall cao hơn (insurance queries đa dạng)
COSINE_THRESHOLD=0.25

# Reranking score threshold - giữ thấp để không bỏ sót
MIN_RERANK_SCORE=0.0

###########################
# Query Strategy
###########################
# Mặc định dùng VECTOR cho chunk picking (tốt hơn WEIGHT cho insurance)
KG_CHUNK_PICK_METHOD=VECTOR
